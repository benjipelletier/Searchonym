{
  "name": "Searchonym",
  "description": "This extension searches through a page for all relevant synonyms of a given word.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],

   "background": {
    "scripts": ["background.js"]
  },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js":      ["content.js"]
    }],
  "browser_action": {
  "default_title": "Searchonym",
   "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
    
  "manifest_version": 2
    
}